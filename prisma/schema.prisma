datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// NextAuth Models
model User {
  id            String    @id @default(cuid())
  userId        String    @unique // Custom user ID (editable, defaults to id)
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Custom Relations
  focusSessions   FocusSession[]
  posts           Post[]
  friendsAsUser   Friend[]       @relation("FriendUser")
  friendsAsSource Friend[]       @relation("FriendSource")
  heartbeats      Heartbeat[]

  // Presence tracking
  lastSeenAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Hyve Domain Models

model Friend {
  id           String @id @default(cuid())
  userId       String // Reference to the User this friend represents
  sourceUserId String // Reference to the User who added this friend

  totalHours Float @default(0)
  streak     Int   @default(0)

  // Relations
  user                User                  @relation("FriendUser", fields: [userId], references: [id], onDelete: Cascade)
  sourceUser          User                  @relation("FriendSource", fields: [sourceUserId], references: [id], onDelete: Cascade)
  focusSessionFriends FocusSessionFriend[]
  posts               Post[]
  messages            Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, sourceUserId]) // Prevent duplicate friend relationships
}

model Memory {
  id             String   @id @default(cuid())
  type           String   @default("note") // 'message', 'call', 'meet', 'note'
  content        String?
  timestamp      DateTime @default(now())
  location       String?  // Location where the memory was created
  happyIndex     Int?     // Happiness index score (0-10)

  focusSessionId String
  focusSession   FocusSession @relation(fields: [focusSessionId], references: [id], onDelete: Cascade)

  photos Photo[]

  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  photoUrl  String   @default("https://picsum.photos/800/600")
  caption   String?
  location  String?
  mood      String?
  timestamp DateTime @default(now())

  // Legacy field
  imageUrl String?

  // A post can belong to a Friend (from mock data) or the User (My Vault)
  friendId String?
  friend   Friend? @relation(fields: [friendId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model FocusSession {
  id        String   @id @default(cuid())
  startTime DateTime @default(now())
  endTime   DateTime @default(now())
  minutes   Int      @default(0)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  friends  FocusSessionFriend[]
  memories Memory[]

  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  senderId  String // userId who sent the message
  timestamp DateTime @default(now())

  friendId String
  friend   Friend @relation(fields: [friendId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model FocusSessionFriend {
  id             String @id @default(cuid())
  focusSessionId String
  friendId       String

  focusSession FocusSession @relation(fields: [focusSessionId], references: [id], onDelete: Cascade)
  friend       Friend       @relation(fields: [friendId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([focusSessionId, friendId])
  @@index([focusSessionId])
  @@index([friendId])
}

model Photo {
  id       String @id @default(cuid())
  photoUrl String // Cloudinary URL or other image service URL
  memoryId String

  memory Memory @relation(fields: [memoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([memoryId])
}

model Heartbeat {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  timestamp DateTime @default(now())

  createdAt DateTime @default(now())

  @@index([userId, timestamp])
  @@index([timestamp])
}
