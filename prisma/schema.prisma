datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// NextAuth Models
model User {
  id            String    @id @default(cuid())
  userId        String    @unique // Custom user ID (editable, defaults to id)
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Custom Relations
  focusSessionsAsUser FocusSessionUser[]
  friendsAsUser       Friend[]        @relation("FriendUser")
  friendsAsSource     Friend[]        @relation("FriendSource")
  heartbeats          Heartbeat[]
  locations           UserLocation[]
  sentRequests        FriendRequest[] @relation("FriendRequestSender")
  receivedRequests    FriendRequest[] @relation("FriendRequestReceiver")
  memories            Memory[]

  // Presence tracking
  lastSeenAt DateTime?

  // Privacy settings
  privacy String @default("public") // 'public' or 'private'

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Hyve Domain Models

model Friend {
  id           String @id @default(cuid())
  userId       String // Reference to the User this friend represents
  sourceUserId String // Reference to the User who added this friend

  totalHours Float @default(0)
  streak     Int   @default(0)

  // Relations
  user       User       @relation("FriendUser", fields: [userId], references: [id], onDelete: Cascade)
  sourceUser User       @relation("FriendSource", fields: [sourceUserId], references: [id], onDelete: Cascade)
  messages   Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, sourceUserId]) // Prevent duplicate friend relationships
}

model Memory {
  id         String   @id @default(cuid())
  type       String   @default("üìö Study") // Vibe check value (e.g., 'üìö Study', 'üçî Eat', 'üèãÔ∏è Gym', etc.)
  content    String?
  timestamp  DateTime @default(now())
  location   String? // Location where the memory was created
  happyIndex Int? // Happiness index score (0-10)

  userId         String
  focusSessionId String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  focusSession   FocusSession @relation(fields: [focusSessionId], references: [id], onDelete: Cascade)

  photos Photo[]

  createdAt DateTime @default(now())
}

model FocusSession {
  id        String   @id @default(cuid())
  startTime DateTime @default(now())
  endTime   DateTime @default(now())
  minutes   Int      @default(0)
  status    String   @default("active") // 'active', 'completed', 'cancelled'

  users    FocusSessionUser[]
  memories Memory[]

  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  senderId  String // userId who sent the message
  timestamp DateTime @default(now())

  friendId String
  friend   Friend @relation(fields: [friendId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model FocusSessionUser {
  id             String @id @default(cuid())
  focusSessionId String
  userId         String
  isPaused       Boolean @default(false) // Track if this user has paused the session (picked up phone)

  focusSession FocusSession @relation(fields: [focusSessionId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([focusSessionId, userId])
  @@index([focusSessionId])
  @@index([userId])
}

model Photo {
  id       String @id @default(cuid())
  photoUrl String // Cloudinary URL or other image service URL
  memoryId String

  memory Memory @relation(fields: [memoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([memoryId])
}

model Heartbeat {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  timestamp DateTime @default(now())

  createdAt DateTime @default(now())

  @@index([userId, timestamp])
  @@index([timestamp])
}

model UserLocation {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, timestamp])
  @@index([timestamp])
}

model FriendRequest {
  id         String @id @default(cuid())
  senderId   String
  receiverId String
  status     String @default("pending") // 'pending', 'accepted', 'rejected'

  sender   User @relation("FriendRequestSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("FriendRequestReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([senderId, receiverId])
  @@index([senderId])
  @@index([receiverId])
  @@index([status])
}
